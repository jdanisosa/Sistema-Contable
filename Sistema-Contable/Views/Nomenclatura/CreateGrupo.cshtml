@model Sistema_Contable.Models.Grupo_Contable
@{
    ViewData["Title"] = "Agregar división";
}

<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
            <div class="flex flex-col mt-10 items-center">
                <form class="bg-teal-50 w-full md:w-2/3 xl:w-1/3 py-5 px-5 mb-10 lg:mb-5 shadow-lg rounded-md" method="post" asp-action="CreateGrupo">
                    <div class="mb-5">
                        <label asp-for="Nombre_Grupo" class="control-label"></label>
                        <input asp-for="Nombre_Grupo"  class="border-2 w-full p-2 mt-2 rounded-md">
                        <span asp-validation-for="Nombre_Grupo" class="text-red-400"></span>
                    </div>
                    
                    <div class="flex justify-center">
                        <input type="submit" value="Agregar división" class="text-gray-200 bg-teal-600 hover:bg-gray-900 font-semibold uppercase tracking-wider transition-all duration-500 px-5 py-2 mb-5 rounded-md cursor-pointer">
                    </div>
                </form>
            </div>
    </div>
</div>