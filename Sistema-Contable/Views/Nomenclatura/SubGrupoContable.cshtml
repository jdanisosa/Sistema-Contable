@model IEnumerable<Sistema_Contable.Models.Clasificacion_Grupo>

@{
    ViewData["Title"] = "Subdivisiones contables";
}
    
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
        <div class="flex flex-col mt-10 items-center">
            <div class="flex w-full md:w-2/3 ml-auto mr-auto justify-center my-5 lg:my-0 lg:justify-end">
                <a asp-action="CreateSubGrupo" asp-controller="Nomenclatura"><button type="button" class="text-gray-200 bg-teal-600 hover:bg-gray-900 font-semibold uppercase tracking-wider transition-all duration-500 px-3 py-2 mb-5 rounded-md cursor-pointer">Agregar subdivisión</button> </a>
            </div>
                <div class="relative w-full 2xl:w-2/3 ml-auto mr-auto overflow-x-auto shadow-md sm:rounded-lg">
                    @if (Model.Count() > 0)
                        {
                            <table class="w-full text-md text-left">
                                <thead class="uppercase font-bold text-center tracking-wide bg-teal-500 text-white">
                                    <tr>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Nombre_Clasificacion) </td>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Nombre_Clasificacion) </td>
                                        <td class="border border-teal-800 px-3 py-1">Acciones</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td class="border border-teal-800 px-3 py-1">@item.Nombre_Clasificacion</td>
                                            <td class="border border-teal-800 px-3 py-1 text-teal-600 hover:text-teal-700">@Html.ActionLink("Editar","EditarGrupo", new{Id_Grupo_Contable = item.Id_Grupo_Contable}) | @Html.ActionLink("Eliminar","EliminarGrupo", new{Id_Grupo_Contable = item.Id_Grupo_Contable})</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                </div>
        </div>
    </div>
</div>